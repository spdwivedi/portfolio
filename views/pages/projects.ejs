<%- include('../partials/header') %>

<section class="container" style="padding-top: 120px; padding-bottom: 100px;">
    
    <div style="text-align: center; margin-bottom: 80px;">
        <p class="intro-mono" data-aos="fade-down" style="color: var(--accent-primary);">02. My Portfolio</p>
        <h1 data-aos="fade-up">My <span class="highlight">Work</span></h1>
    </div>

    <% function renderSection(title, icon, filterKey) { %>
        <div class="project-category" style="margin-bottom: 100px;">
            <h2 class="category-title" data-aos="fade-right" style="font-size: 1.8rem; margin-bottom: 30px; border-bottom: 1px solid var(--glass-border); padding-bottom: 10px; display: inline-block;">
                <i class="<%= icon %>" style="color: var(--accent-primary); margin-right: 10px;"></i> <%= title %>
            </h2>
            <div class="grid">
                <% const filtered = projects.filter(p => p.category === filterKey); %>
                <% if(filtered.length > 0) { %>
                    <% filtered.forEach((project, index) => { %>
                        <%- include('../partials/project-card', { project: project }) %>
                    <% }); %>
                <% } else { %>
                    <p style="color: var(--text-muted); font-style: italic;">Adding projects soon...</p>
                <% } %>
            </div>
        </div>
    <% } %>

    <% renderSection('College Projects', 'fa-solid fa-graduation-cap', 'college') %>

    <% renderSection('Personal Projects', 'fa-solid fa-user-astronaut', 'personal') %>

    <% renderSection('Udemy Projects', 'fa-solid fa-video', 'udemy') %>

    <% renderSection('Coursera Projects', 'fa-solid fa-certificate', 'coursera') %>

</section>

<%- include('../partials/footer') %>